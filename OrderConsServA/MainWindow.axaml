<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="using:OrderConsServA"
        xmlns:converters="using:OrderConsServA.Converters"
        xmlns:vm="clr-namespace:OrderConsServA.MainViewModel"
        xmlns:models="clr-namespace:Models;assembly=Models"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="600"
        x:Class="OrderConsServA.MainWindow"
        x:DataType="local:MainViewModel"
        x:Name="CSrvWin"
        Title="CoffeeMarket (Server)"
        Width="640" Height="480">
        <Window.DataContext>
            <local:MainViewModel />
        </Window.DataContext>
          <Window.ContextMenu>
        <ContextMenu>
          <MenuItem Header="Свернуть в трей" Click="Hide_Click"/>
        </ContextMenu>
      </Window.ContextMenu> 
    <TabControl>
        <TabItem Header="Заказы">
			<Grid>
                <Grid.RowDefinitions>
					<RowDefinition Height=".05*"/> <!-->spacing<-->
                    <RowDefinition Height=".1"/> <!-->field1<-->
                    <RowDefinition Height=".05*"/> <!-->spacing<-->
                    <RowDefinition Height=".1"/> <!-->cbox<-->
                    <RowDefinition Height=".175*"/> <!-->spacing<-->
                    <RowDefinition Height=".1"/> <!-->field2<-->
                    <RowDefinition Height=".05*"/> <!-->spacing<-->
                    <RowDefinition Height="*"/> <!-->datagrid<-->
                    <RowDefinition Height=".1"/> <!-->spacing<-->
                    <RowDefinition Height="Auto"/> <!-->buttons<-->
                    <RowDefinition Height="5"/> <!-->spacing<-->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
					<ColumnDefinition Width=".05"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width=".05"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtCustomer" Watermark="Имя" 
                         Grid.Row="1" Grid.Column="1"
                         Grid.ColumnSpan="2"
                         Text="" Margin="0,10,0,10"/>
                    <ComboBox x:Name="txtProduct" Margin="0,0,0,10" 
                              Grid.Row="3" Grid.Column="1"
                              Grid.ColumnSpan="2"
                              PlaceholderText="Продукт" HorizontalAlignment="Stretch" 
                              ItemsSource="{Binding ProductNames}"/>
                    <TextBox x:Name="txtQuantity" Watermark="Количество" 
                             Grid.Row="5" Grid.Column="1"
                             Grid.ColumnSpan="2"
                             Text="" Margin="0,0,0,20"/>
                <Button Content="Мне повезёт!" Click="Random_Click" 
                        Grid.Row="9" Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"/>
                <Button Content="Отправить" Click="Send_Click"
                        Grid.Row="9" Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"/>
				<DataGrid Name="DataGridOrders"
                Grid.Row="7" Grid.RowSpan="7"
                Grid.Column="1" Grid.ColumnSpan="2"
                ItemsSource="{Binding Orders}"
                AutoGenerateColumns="False" 
                CanUserResizeColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Покупатель" 
                               Binding="{Binding CustomerName}" Width="*"/>
                        <DataGridTextColumn Header="Товар" 
                               Binding="{Binding ProductName}" Width="*"/>
                        <DataGridTextColumn Header="Кол-во" 
                               Binding="{Binding Quantity, StringFormat='{}{0} шт.'}" Width="*"/>
                        <DataGridTextColumn Header="Цена" 
                                       Binding="{Binding Price, StringFormat={}{0} Cr}" Width="*"/>
                                <DataGridTextColumn Header="Сумма" 
                                       Binding="{Binding TotalPrice, StringFormat={}{0} Cr}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
		<TabItem Header="Консоль">
			<Grid>
                <Grid.RowDefinitions>
					<RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                </Grid.RowDefinitions>
				<TextBox x:Name="ConsoleBox" Grid.Row="0" Grid.Column="0"
                         FontFamily="Courier New" TextWrapping="Wrap"
                         FontWeight="DemiBold" FontSize="16"/>
            </Grid>
        </TabItem>
        <TabItem Header="Связь">
            <Grid>
                <Grid.RowDefinitions>
					<RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                </Grid.RowDefinitions>
				<TextBox x:Name="ChatBoxServ" Grid.Row="0" Grid.Column="0"
                         TextWrapping="Wrap" FontSize="16"
                         AcceptsReturn="True"
                         TextChanged="ChatBoxServ_TextChanged"/>
                <Button x:Name="SrvMsgSendBtn" Grid.Row="2"
                        Content="Отправить" Click="SrvMsgSendBtn_Click" 
                        HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                        HorizontalContentAlignment="Center"
                        Margin="0,10,0,10"
                        HotKey="Ctrl+Enter">
                    </Button>
            </Grid>
            <!--> возможно будет допилено
			<Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ScrollViewer Grid.Row="0">
                            <ItemsControl ItemsSource="{Binding ChatMessages}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="5"
                                               Background="{Binding IsUser, 
                                                   Converter={StaticResource BoolToBrushConverter}}">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Text}" 
                                                           Margin="10" 
                                                           FontSize="14"/>
                                                <TextBlock Text="{Binding Timestamp, StringFormat=t}" 
                                                           FontSize="10" 
                                                           HorizontalAlignment="Right" 
                                                           Margin="10,0,10,5"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <TextBox Grid.Row="1"
                                Text="{Binding NewMessageText, Mode=TwoWay}"
                                Margin="10"
                                Height="40"/>
            
                        <Button Grid.Row="1"
                                Content="Отправить"
                                Margin="10"
                                HorizontalAlignment="Right"
                                Command="{Binding SendMessageCommand}"/>
                </Grid>
                <-->
        </TabItem>
    </TabControl>
</Window>
