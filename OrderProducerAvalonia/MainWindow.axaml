<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:orderproduceravalonia="using:OrderProducerAvalonia"
        xmlns:vm="clr-namespace:OrderProducerAvalonia"
        xmlns:models="clr-namespace:Models;assembly=Models"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="OrderProducerAvalonia.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="CoffeeMarketDB">
        <Window.DataContext>
            <vm:MainViewModel />
        </Window.DataContext>
    <Grid Margin="10">
        <StackPanel>
            <Button Content="Fill with random data" Click="Random_Click" HorizontalAlignment="Center" Margin="0,10,0,10"/>
            <TextBox x:Name="txtCustomer" Text="Customer" Margin="0,10,0,10"/>
            <TextBox x:Name="txtProduct" Text="Product" Margin="0,0,0,10"/>
            <TextBox x:Name="txtQuantity" Text="Quantity" Margin="0,0,0,20"/>
            <Button Content="Send order" Click="Send_Click" HorizontalAlignment="Center"/>
            <DataGrid Name="DataGridOrders" Margin="20" Height="200" 
                ItemsSource="{Binding Orders}"
                AutoGenerateColumns="False" 
                IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Покупатель" 
                           Binding="{Binding CustomerName}" Width="*"/>
                    <DataGridTextColumn Header="Товар" 
                           Binding="{Binding ProductName}" Width="*"/>
                    <DataGridTextColumn Header="Кол-во" 
                           Binding="{Binding Quantity}" Width="*"/>
                    <DataGridTextColumn Header="Цена" 
                           Binding="{Binding Price}" Width="*"/>
                    <DataGridTextColumn Header="Сумма" 
                           Binding="{Binding TotalPrice}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
