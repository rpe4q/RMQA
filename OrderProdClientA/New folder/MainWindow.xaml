<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="using:OrderProdClientA"
        xmlns:converters="using:OrderProdClientA.Converters"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:OrderProdClientA.MainViewModel"
        xmlns:models="clr-namespace:Models;assembly=Models"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="600"
        x:Class="OrderProdClientA.MainWindow"
        x:DataType="local:MainViewModel"
        Title="CoffeeMarket (Client)"
        Width="450" Height="600">
        <Window.DataContext>
            <local:MainViewModel />
        </Window.DataContext>
    <Grid Margin="10">
        <TabControl>
            <TabItem Header="Заказы">
                <StackPanel>
                    <TextBox x:Name="txtCustomer" Watermark="Имя" Margin="0,10,0,10"/>
                    <ComboBox x:Name="txtProduct" Margin="0,0,0,10" 
                              PlaceholderText="Продукт" HorizontalAlignment="Stretch" 
                              ItemsSource="{Binding ProductNames}"/>
                    <TextBox x:Name="txtQuantity" Watermark="Количество" Margin="0,0,0,20"/>
                    <Button Content="Мне повезёт!" Click="Random_Click" 
                            HorizontalAlignment="Center" Margin="0,10,0,10"/>
                    <Button Content="Отправить" Click="Send_Click" HorizontalAlignment="Center"/>
                    <DataGrid Name="DataGridOrders" Margin="20" Height="256"
                        ItemsSource="{Binding Orders}"
                        AutoGenerateColumns="False" 
                        IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Покупатель" 
                                       Binding="{Binding CustomerName}" Width="*"/>
                                <DataGridTextColumn Header="Товар" 
                                       Binding="{Binding ProductName}" Width="*"/>
                                <DataGridTextColumn Header="Кол-во" 
                                       Binding="{Binding Quantity}" Width="*"/>
                                <DataGridTextColumn Header="Цена" 
                                       Binding="{Binding Price}" Width="*"/>
                                <DataGridTextColumn Header="Сумма" 
                                       Binding="{Binding TotalPrice}" Width="*"/>
                            </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="HideBtn" Content="Свернуть в трей" Click="Hide_Click" 
                            HorizontalAlignment="Center" Margin="0,10,0,10"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Связь">
				<Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Область чата -->
            <ScrollViewer Grid.Row="0">
                <ItemsControl ItemsSource="{Binding ChatMessages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="5"
                                   Background="{Binding IsUser, 
                                       Converter={Binding BoolToBrushConverter}}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Text}" 
                                               Margin="10" 
                                               FontSize="14"/>
                                    <TextBlock Text="{Binding Timestamp, StringFormat=t}" 
                                               FontSize="10" 
                                               HorizontalAlignment="Right" 
                                               Margin="10,0,10,5"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Поле ввода -->
            <TextBox Grid.Row="1"
                    Text="{Binding NewMessageText, Mode=TwoWay}"
                    Margin="10"
                    Height="40"/>
            
            <!-- Кнопка отправки -->
            <Button Grid.Row="1"
                    Content="Отправить"
                    Margin="10"
                    HorizontalAlignment="Right"
                    Command="{Binding SendMessageCommand}"/>
        </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
