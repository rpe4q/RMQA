<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="using:OrderProdClientA"
        xmlns:converters="using:OrderProdClientA.Converters"
        xmlns:vm="clr-namespace:OrderProdClientA.MainViewModel"
        xmlns:models="clr-namespace:Models;assembly=Models"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="600"
        x:Class="OrderProdClientA.MainWindow"
        x:DataType="local:MainViewModel"
        x:Name="CCliWin"
        Title="CoffeeMarket (Client)"
        Width="640" Height="640">
        <Window.DataContext>
            <local:MainViewModel />
        </Window.DataContext>
      <Window.ContextMenu>
        <ContextMenu>
          <MenuItem Header="Свернуть в трей" Click="Hide_Click"/>
        </ContextMenu>
      </Window.ContextMenu> 
    <Grid Margin="10">
        <TabControl>
            <TabItem Header="Заказы">
                <StackPanel>
                    <TextBox x:Name="txtCustomer" Watermark="Имя" Text="" Margin="0,10,0,10"/>
                    <ComboBox x:Name="txtProduct" Margin="0,0,0,10" 
                              PlaceholderText="Продукт" HorizontalAlignment="Stretch" 
                              ItemsSource="{Binding ProductNames}"/>
                    <TextBox x:Name="txtQuantity" Watermark="Количество" Text="" Margin="0,0,0,20"/>
                    <Button Content="Мне повезёт!" Click="Random_Click" 
                            HorizontalAlignment="Center" Margin="0,10,0,10"/>
                    <Button Content="Отправить" Click="Send_Click" HorizontalAlignment="Center"/>
                    <StackPanel Margin="0,20,0,0">
                        <TextBlock Text="Текущий заказ:" FontWeight="Bold" FontSize="20"/>
                        <TextBlock Text="Покупатель: " Margin="10,10,0,0"/>
                        <TextBlock Text="{Binding CurrentOrder.CustomerName}" Margin="20,0,0,0"/>
        
                        <TextBlock Text="Товар: " Margin="10,10,0,0"/>
                        <TextBlock Text="{Binding CurrentOrder.ProductName}" Margin="20,0,0,0"/>
        
                        <TextBlock Text="Количество: " Margin="10,10,0,0"/>
                        <TextBlock Text="{Binding CurrentOrder.Quantity, StringFormat='{}{0} шт.'}" Margin="20,0,0,0"/>
        
                        <TextBlock Text="Цена: " Margin="10,10,0,0"/>
                        <TextBlock Text="{Binding CurrentOrder.Price, StringFormat={}{0:0.00} Cr}" Margin="20,0,0,0"/>
        
                        <TextBlock Text="Сумма: " Margin="10,10,0,0"/>
                        <TextBlock Text="{Binding CurrentOrder.TotalPrice, StringFormat={}{0:0.00} Cr}" Margin="20,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>
                <TabItem Header="Связь">
				    <Grid>
                        <Grid.RowDefinitions>
					        <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="5"/>
                        </Grid.RowDefinitions>
				        <TextBox x:Name="ChatBoxCli" Grid.Row="0" Grid.Column="0"
                                 TextWrapping="Wrap" FontSize="16"
                                 AcceptsReturn="True"
                                 TextChanged="ChatBoxCli_TextChanged"/>
                        <Button x:Name="SrvMsgSendBtn" Grid.Row="2"
                        Content="Отправить" Click="CliMsgSendBtn_Click" 
                        HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                        HorizontalContentAlignment="Center"
                        Margin="0,10,0,10"
                        HotKey="Ctrl+Enter"/>
                    </Grid>
            <!--> возможно будет допилено
			    <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ScrollViewer Grid.Row="0">
                                <ItemsControl ItemsSource="{Binding ChatMessages}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="5"
                                                   Background="{Binding IsUser, 
                                                       Converter={StaticResource BoolToBrushConverter}}">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Text}" 
                                                               Margin="10" 
                                                               FontSize="14"/>
                                                    <TextBlock Text="{Binding Timestamp, StringFormat=t}" 
                                                               FontSize="10" 
                                                               HorizontalAlignment="Right" 
                                                               Margin="10,0,10,5"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <TextBox Grid.Row="1"
                                    Text="{Binding NewMessageText, Mode=TwoWay}"
                                    Margin="10"
                                    Height="40"/>
            
                            <Button Grid.Row="1"
                                    Content="Отправить"
                                    Margin="10"
                                    HorizontalAlignment="Right"
                                    Command="{Binding SendMessageCommand}"/>
                    </Grid>
                <-->
            </TabItem>
        </TabControl>
    </Grid>
</Window>
