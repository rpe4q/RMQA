<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="using:OrderProdClientA"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:OrderProdClientA.MainViewModel"
        xmlns:models="clr-namespace:Models;assembly=Models"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="600"
        x:Class="OrderProdClientA.MainWindow"
        x:DataType="local:MainViewModel"
        Title="CoffeeMarket (Client)"
        Width="450" Height="600">
        <Window.DataContext>
            <local:MainViewModel />
        </Window.DataContext>
    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="txtCustomer" Watermark="Имя" Margin="0,10,0,10"/>
            <ComboBox x:Name="txtProduct" Margin="0,0,0,10" 
                      PlaceholderText="Продукт" HorizontalAlignment="Stretch" 
                      ItemsSource="{Binding ProductNames}"/>
            <TextBox x:Name="txtQuantity" Watermark="Количество" Margin="0,0,0,20"/>
            <Button Content="Я ощущаю себя везучим" Click="Random_Click" 
                    HorizontalAlignment="Center" Margin="0,10,0,10"/>
            <Button Content="Отправить" Click="Send_Click" HorizontalAlignment="Center"/>
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="Текущий заказ:" FontWeight="Bold" 
                           Margin="0,0,0,20" FontSize="20"/>

                <TextBlock Text="Покупатель: " Margin="10,0,0,0"/>
                <TextBlock Text="{Binding CurrentOrder.CustomerName}" Margin="20,0,0,0"/>
        
                <TextBlock Text="Товар: " Margin="10,10,0,0"/>
                <TextBlock Text="{Binding CurrentOrder.ProductName}" Margin="20,0,0,0"/>
        
                <TextBlock Text="Количество: " Margin="10,10,0,0"/>
                <TextBlock Text="{Binding CurrentOrder.Quantity}" Margin="20,0,0,0"/>
        
                <TextBlock Text="Цена: " Margin="10,10,0,0"/>
                <TextBlock Text="{Binding CurrentOrder.Price}" Margin="20,0,0,0"/>
        
                <TextBlock Text="Сумма: " Margin="10,10,0,0"/>
                <TextBlock Text="{Binding CurrentOrder.TotalPrice}" Margin="20,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
